@model IEnumerable<PTPMQL.Models.Meeting>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w3-animate-opacity w3-margin-top">
    <img src="~/Images/logo_vna.png" class="" style="width:20%" />
</div>

<div class="udCenter udWidth30">
    <h1 class="w3-center w3-text-purple w3-monospace">Nội dung cuộc họp</h1>
</div>

<div class="w3-btn w3-round w3-border w3-text-light-blue">
    @Html.ActionLink("Add Content", "Create")
</div>
<table class="w3-table w3-bordered w3-light-gray w3-margin-top">
    <tbody>
        <tr class="w3-blue">
            <th class="w3-center">Chủ đề cuộc họp</th>
            <th class="w3-center">Mã chuyến bay</th>
            <th class="w3-center">Ngày giờ</th>
            <th class="w3-center">Nội dung cuộc họp</th>
            <th class="w3-center">Tùy chỉnh</th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <th class="w3-center">
            @Html.DisplayFor(modelItem => item.ChuDeHop)
        </th>
        <td class="w3-center">
            @Html.DisplayFor(modelItem => item.MaChuyenBay)
        </td>
        <td class="w3-center">
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td class="w3-center">
            @Html.DisplayFor(modelItem => item.NoiDungHop)
        </td>

        <td class="w3-center">
            <div class="w3-btn w3-round-small w3-border">
                @Html.ActionLink("Edit", "Edit", new { id = item.IDNhanVien })
            </div>
            <div class="w3-btn w3-round-small w3-border">
                @Html.ActionLink("Details", "Details", new { id = item.IDNhanVien })
            </div>
            <div class="w3-btn w3-round-small w3-border">
                @Html.ActionLink("Delete", "Delete", new { id = item.IDNhanVien })
            </div>
        </td>
    </tr>
        }
    </tbody>
</table>
