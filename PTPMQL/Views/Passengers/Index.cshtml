@model IEnumerable<PTPMQL.Models.Passenger>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w3-animate-opacity w3-margin-top">
    <img src="~/Images/logo_vna.png" class="" style="width:20%" />
</div>

<div class="w3-margin-top w3-btn w3-round w3-border w3-text-light-blue">
    @Html.ActionLink("Add informations", "Create")
</div>
<table class="w3-table w3-bordered w3-light-gray w3-margin-top">
    <tbody>
        <tr class="w3-black">
            <th class="w3-center">Họ Và Tên</th>
            <th class="w3-center">Hộ chiếu</th>
            <th class="w3-center">Giới tính</th>
            <th class="w3-center">Tùy chỉnh</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th class="w3-center">
                    @Html.DisplayFor(modelItem => item.HovaTen)
                </th>

                <td class="w3-center">
                    @Html.DisplayFor(modelItem => item.HoChieu)
                </td>

                <td class="w3-center">
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
  
                <td class="w3-center">
                    <div class="w3-btn w3-round-small w3-border">
                        @Html.ActionLink("Edit", "Edit", new { id = item.HoChieu })
                    </div>
                    <div class="w3-btn w3-round-small w3-border">
                        @Html.ActionLink("Details", "Details", new { id = item.HoChieu })
                    </div>
                    <div class="w3-btn w3-round-small w3-border">
                        @Html.ActionLink("Delete", "Delete", new { id = item.HoChieu })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
