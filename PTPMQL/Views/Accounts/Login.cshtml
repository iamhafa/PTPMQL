@model PTPMQL.Models.Account

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="w3-round udCenter udWidth30">
        <div>
            <div class="w3-container">

                <div class="w3-card-4 w3-margin-top">
                    <header class="w3-blue w3-center w3-container">
                        <h1>Đăng nhập tài khoản</h1>
                    </header>

                    <div class="w3-container">
                        <div class="w3-row w3-margin-top ">
                            <label>UserName</label>
                            <input type="text" name="UserName" class="w3-input w3-border w3-round-large udMaxWidth30" placeholder="Tên đăng nhập" required" />
                        </div>

                        <div class="w3-row w3-margin-top">
                            <label>PassWord</label>
                            <input type="password" name="PassWord" class="w3-input w3-border w3-round-large udMaxWidth30" placeholder="Mật khẩu" required" />
                        </div>

                        <footer class="w3-padding w3-border-light-gray w3-margin-top">
                            <input type="submit" value="Login" class="w3-btn w3-white w3-border w3-border-blue w3-round w3-card" />
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
