@model PTPMQL.Models.CheckAccount
@using PTPMQL.Models
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w3-animate-opacity w3-margin-top">
    <img src="~/Images/logo_vna.png" class="" style="width:20%" />
</div>

@using (Html.BeginForm("Login", "CheckAccount", new { ReturnURL = ViewBag.returnUrl }))
{
    @Html.AntiForgeryToken()

    <div class="w3-round udCenter udWidth30 w3-margin-top w3-animate-top">
        <div class="w3-card w3-container w3-gray w3-round">
            <h1 class="w3-margin-top w3-center">Truy cập hệ thống</h1>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="w3-container">
                

                <div class="">
                    @Html.Label("Tài khoản", new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.CheckUserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CheckUserName, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="w3-container">
                <div class="">
                    @Html.Label("Mật khẩu", new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.CheckPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CheckPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="w3-margin-left w3-margin-top">
                    @Html.GoogleCaptcha()
                    @Html.InvalidGoogleCaptchaLabel("Captcha is not valid !")
                </div>
            }

            <footer class="w3-padding w3-margin-top w3-margin-bottom">
                <input type="submit" value="Join" class="w3-btn w3-white w3-border w3-border-blue-gray w3-round w3-card" />
            </footer>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}