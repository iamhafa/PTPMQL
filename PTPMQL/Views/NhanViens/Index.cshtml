@model IEnumerable<PTPMQL.Models.NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nhân viên hãng Hàng Không</h2>

<p>
    @Html.ActionLink("Thêm thông tin", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.HoTenNV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChucVu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoPhan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTenNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChucVu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BoPhan)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.IDNhanVien }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.IDNhanVien }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.IDNhanVien })
        </td>
    </tr>
}

</table>
